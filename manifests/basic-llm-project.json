{
  "project_id": "basic-llm-project",
  "project_name": "Basic LLM Development Project",
  "version": "1.0.0",
  "description": "Simple LLM project for development and testing",
  "owner": "developer@company.com",
  "team": ["developer@company.com"],
  "tags": ["llm", "development", "poc"],
  "environment": "development",
  "created_at": "2024-03-01T09:00:00Z",
  "updated_at": "2024-03-01T09:00:00Z",
  "environments": {
    "development": {
      "name": "Development",
      "description": "Development environment for testing and debugging",
      "urls": {
        "api_base_url": "https://dev-api.company.com",
        "frontend_url": "https://dev-app.company.com",
        "admin_dashboard": "https://dev-admin.company.com",
        "monitoring_dashboard": "https://dev-monitoring.company.com"
      },
      "secrets": {
        "jwt_secret_key": "${DEV_JWT_SECRET}",
        "openai_api_key": "${DEV_OPENAI_API_KEY}",
        "database_connection_string": "${DEV_DB_CONNECTION}",
        "redis_connection_string": "${DEV_REDIS_CONNECTION}"
      },
      "infrastructure": {
        "region": "us-east-1",
        "vpc_id": "vpc-dev-12345",
        "subnet_ids": ["subnet-dev-1", "subnet-dev-2"],
        "security_groups": ["sg-dev-web", "sg-dev-api"],
        "load_balancer_arn": "arn:aws:elasticloadbalancing:us-east-1:account:loadbalancer/app/dev-lb/abc123"
      },
      "scaling": {
        "min_instances": 1,
        "max_instances": 3,
        "target_cpu_utilization": 70,
        "auto_scaling_enabled": false
      },
      "data_storage": {
        "primary_database": "postgresql-dev.cluster.amazonaws.com:5432",
        "cache_storage": "redis-dev.cache.amazonaws.com:6379",
        "object_storage": "s3://dev-llm-project-storage",
        "backup_storage": "s3://dev-llm-project-backups"
      }
    },
    "staging": {
      "name": "Staging",
      "description": "Staging environment for pre-production testing",
      "urls": {
        "api_base_url": "https://staging-api.company.com",
        "frontend_url": "https://staging-app.company.com",
        "admin_dashboard": "https://staging-admin.company.com",
        "monitoring_dashboard": "https://staging-monitoring.company.com"
      },
      "secrets": {
        "jwt_secret_key": "${STAGING_JWT_SECRET}",
        "openai_api_key": "${STAGING_OPENAI_API_KEY}",
        "database_connection_string": "${STAGING_DB_CONNECTION}",
        "redis_connection_string": "${STAGING_REDIS_CONNECTION}"
      },
      "infrastructure": {
        "region": "us-east-1",
        "vpc_id": "vpc-staging-12345",
        "subnet_ids": ["subnet-staging-1", "subnet-staging-2"],
        "security_groups": ["sg-staging-web", "sg-staging-api"],
        "load_balancer_arn": "arn:aws:elasticloadbalancing:us-east-1:account:loadbalancer/app/staging-lb/def456"
      },
      "scaling": {
        "min_instances": 2,
        "max_instances": 5,
        "target_cpu_utilization": 70,
        "auto_scaling_enabled": true
      },
      "data_storage": {
        "primary_database": "postgresql-staging.cluster.amazonaws.com:5432",
        "cache_storage": "redis-staging.cache.amazonaws.com:6379",
        "object_storage": "s3://staging-llm-project-storage",
        "backup_storage": "s3://staging-llm-project-backups"
      }
    },
    "production": {
      "name": "Production",
      "description": "Production environment for live workloads",
      "urls": {
        "api_base_url": "https://api.company.com",
        "frontend_url": "https://app.company.com",
        "admin_dashboard": "https://admin.company.com",
        "monitoring_dashboard": "https://monitoring.company.com"
      },
      "secrets": {
        "jwt_secret_key": "${PROD_JWT_SECRET}",
        "openai_api_key": "${PROD_OPENAI_API_KEY}",
        "database_connection_string": "${PROD_DB_CONNECTION}",
        "redis_connection_string": "${PROD_REDIS_CONNECTION}"
      },
      "infrastructure": {
        "region": "us-east-1",
        "vpc_id": "vpc-prod-12345",
        "subnet_ids": ["subnet-prod-1", "subnet-prod-2", "subnet-prod-3"],
        "security_groups": ["sg-prod-web", "sg-prod-api"],
        "load_balancer_arn": "arn:aws:elasticloadbalancing:us-east-1:account:loadbalancer/app/prod-lb/ghi789"
      },
      "scaling": {
        "min_instances": 3,
        "max_instances": 10,
        "target_cpu_utilization": 60,
        "auto_scaling_enabled": true
      },
      "data_storage": {
        "primary_database": "postgresql-prod.cluster.amazonaws.com:5432",
        "cache_storage": "redis-prod.cache.amazonaws.com:6379",
        "object_storage": "s3://prod-llm-project-storage",
        "backup_storage": "s3://prod-llm-project-backups"
      }
    }
  },
  "modules": [
    {
      "module_type": "jwt_config",
      "name": "simple-auth",
      "version": "1.0.0",
      "status": "enabled",
      "description": "Basic JWT authentication",
      "dependencies": [],
      "config": {
        "secret_key": "${environments.${environment}.secrets.jwt_secret_key}",
        "algorithm": "HS256",
        "expiration_minutes": 30,
        "issuer": "basic-llm-${environment}",
        "audience": "${environment}-users",
        "refresh_token_enabled": false
      },
      "environment_overrides": {
        "production": {
          "expiration_minutes": 60,
          "refresh_token_enabled": true
        },
        "staging": {
          "expiration_minutes": 45
        }
      }
    },
    {
      "module_type": "inference_endpoint",
      "name": "llm-chat",
      "version": "1.0.0",
      "status": "enabled",
      "description": "Basic LLM inference for chat",
      "dependencies": ["simple-auth"],
      "config": {
        "model_name": "gpt-3.5-turbo",
        "model_version": "latest",
        "endpoint_url": "${environments.${environment}.urls.api_base_url}/v1/chat/completions",
        "api_key": "${environments.${environment}.secrets.openai_api_key}",
        "system_prompt": "You are a helpful assistant. Be concise and accurate in your responses.",
        "max_tokens": 150,
        "temperature": 0.7,
        "top_p": 1.0,
        "batch_size": 1
      },
      "environment_overrides": {
        "production": {
          "max_tokens": 300,
          "temperature": 0.5,
          "batch_size": 4
        },
        "staging": {
          "max_tokens": 200,
          "batch_size": 2
        }
      }
    },
    {
      "module_type": "monitoring",
      "name": "basic-logging",
      "version": "1.0.0",
      "status": "enabled",
      "description": "Simple logging and monitoring",
      "dependencies": [],
      "config": {
        "metrics_enabled": true,
        "logging_level": "DEBUG",
        "tracing_enabled": false,
        "health_check_interval": 60,
        "alerting_enabled": false,
        "dashboard_url": "${environments.${environment}.urls.monitoring_dashboard}"
      },
      "environment_overrides": {
        "production": {
          "logging_level": "INFO",
          "tracing_enabled": true,
          "alerting_enabled": true,
          "health_check_interval": 30
        },
        "staging": {
          "logging_level": "INFO",
          "tracing_enabled": true,
          "health_check_interval": 45
        }
      }
    }
  ],
  "metadata": {
    "cost_center": "DEV-001",
    "business_unit": "R&D",
    "compliance_level": "low",
    "data_classification": "internal",
    "support_contact": "dev-team@company.com"
  }
}
