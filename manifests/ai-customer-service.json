{
  "project_id": "ai-customer-service",
  "project_name": "AI Customer Service Platform",
  "version": "1.2.0",
  "description": "Comprehensive AI-powered customer service platform with RAG, inference, and monitoring capabilities",
  "owner": "ai-team@company.com",
  "team": [
    "john.doe@company.com",
    "jane.smith@company.com",
    "mike.johnson@company.com"
  ],
  "tags": [
    "ai",
    "customer-service",
    "llm",
    "rag",
    "production"
  ],
  "environment": "production",
  "created_at": "2024-01-15T10:30:00Z",
  "updated_at": "2024-02-20T14:45:00Z",
  "modules": [
    {
      "module_type": "jwt_config",
      "name": "auth-service",
      "version": "1.1.0",
      "status": "enabled",
      "description": "JWT authentication for customer service API",
      "dependencies": [],
      "config": {
        "secret_key": "${JWT_SECRET_KEY}",
        "algorithm": "HS256",
        "expiration_minutes": 60,
        "issuer": "customer-service-platform",
        "audience": "cs-api-users",
        "refresh_token_enabled": true
      }
    },
    {
      "module_type": "rag_config",
      "name": "knowledge-base",
      "version": "2.1.0",
      "status": "enabled",
      "description": "RAG system for customer service knowledge retrieval",
      "dependencies": ["auth-service"],
      "config": {
        "vector_store_type": "faiss",
        "embedding_model": "sentence-transformers/all-MiniLM-L6-v2",
        "chunk_size": 512,
        "chunk_overlap": 50,
        "retrieval_k": 10,
        "reranker_enabled": true,
        "query_expansion_enabled": true
      }
    },
    {
      "module_type": "api_gateway",
      "name": "gateway",
      "version": "1.0.0",
      "status": "enabled",
      "description": "API gateway for routing customer service requests",
      "dependencies": ["auth-service"],
      "config": {
        "rate_limiting": {
          "per_minute": 100,
          "per_hour": 1000,
          "burst": 20
        },
        "cors_origins": [
          "https://customer-portal.company.com",
          "https://admin.company.com"
        ],
        "authentication_required": true,
        "api_versioning": "v2",
        "request_timeout": 30,
        "load_balancing_strategy": "round_robin"
      }
    },
    {
      "module_type": "inference_endpoint",
      "name": "llm-inference",
      "version": "1.3.0",
      "status": "enabled",
      "description": "LLM inference endpoint for generating customer responses",
      "dependencies": ["knowledge-base", "gateway"],
      "config": {
        "model_name": "gpt-4",
        "model_version": "2024-02-15",
        "endpoint_url": "https://api.openai.com/v1/chat/completions",
        "system_prompt": "You are a helpful customer service assistant. Use the provided knowledge base context to answer customer questions accurately and professionally. Always be polite, concise, and helpful. If you don't know something, say so and offer to escalate to a human agent.",
        "max_tokens": 500,
        "temperature": 0.7,
        "top_p": 0.9,
        "batch_size": 1
      }
    },
    {
      "module_type": "security",
      "name": "security-policies",
      "version": "1.0.0",
      "status": "enabled",
      "description": "Security and compliance configuration",
      "dependencies": ["auth-service"],
      "config": {
        "encryption_at_rest": true,
        "encryption_in_transit": true,
        "vulnerability_scanning": true,
        "access_control_type": "rbac",
        "audit_logging": true,
        "compliance_standards": ["SOC2", "GDPR", "CCPA"]
      }
    },
    {
      "module_type": "monitoring",
      "name": "observability",
      "version": "1.2.0",
      "status": "enabled",
      "description": "Comprehensive monitoring and observability",
      "dependencies": ["gateway"],
      "config": {
        "metrics_enabled": true,
        "logging_level": "INFO",
        "tracing_enabled": true,
        "health_check_interval": 30,
        "alerting_enabled": true,
        "dashboard_url": "https://monitoring.company.com/customer-service"
      }
    },
    {
      "module_type": "model_registry",
      "name": "model-management",
      "version": "1.1.0",
      "status": "enabled",
      "description": "Model versioning and lifecycle management",
      "dependencies": ["llm-inference"],
      "config": {
        "registry_type": "mlflow",
        "registry_url": "https://mlflow.company.com",
        "auto_versioning": true,
        "model_validation": true,
        "metadata_tracking": true,
        "experiment_tracking": true
      }
    },
    {
      "module_type": "notifications",
      "name": "alert-system",
      "version": "1.0.0",
      "status": "enabled",
      "description": "Notification and alerting system",
      "dependencies": ["observability"],
      "config": {
        "email_enabled": true,
        "slack_enabled": true,
        "webhook_enabled": false,
        "notification_channels": {
          "email": "alerts@company.com",
          "slack": "#customer-service-alerts"
        },
        "alert_rules": [
          {
            "name": "high_error_rate",
            "condition": "error_rate > 5%",
            "severity": "high"
          },
          {
            "name": "response_time_slow",
            "condition": "avg_response_time > 2s",
            "severity": "medium"
          }
        ],
        "escalation_policies": [
          {
            "level": 1,
            "delay_minutes": 5,
            "channels": ["slack"]
          },
          {
            "level": 2,
            "delay_minutes": 15,
            "channels": ["email", "slack"]
          }
        ]
      }
    },
    {
      "module_type": "backup_recovery",
      "name": "disaster-recovery",
      "version": "1.0.0",
      "status": "enabled",
      "description": "Backup and disaster recovery configuration",
      "dependencies": ["knowledge-base"],
      "config": {
        "backup_enabled": true,
        "backup_frequency": "daily",
        "retention_policy": "90d",
        "disaster_recovery_enabled": true,
        "backup_storage_type": "cloud",
        "restore_testing": true
      }
    }
  ],
  "metadata": {
    "cost_center": "AI-001",
    "business_unit": "Customer Experience",
    "compliance_level": "high",
    "data_classification": "internal",
    "support_contact": "ai-platform-team@company.com",
    "documentation_url": "https://docs.company.com/ai-customer-service",
    "deployment_regions": ["us-east-1", "eu-west-1"],
    "sla_tier": "gold"
  }
}
