{
  "project_id": "multi-vault-example",
  "project_name": "Multi-Vault Secret Management Example",
  "owner": "Security Team",
  "environment": "production",
  "modules": [
    {
      "module_type": "vault",
      "name": "vault-manager",
      "config": {
        "vault_instances": [
          {
            "instance_name": "prod-vault",
            "vault_url": "https://vault-prod.example.com:8200",
            "vault_namespace": "ai-projects",
            "auth_method": "approle",
            "role_id": "env:PROD_VAULT_ROLE_ID",
            "secret_id": "env:PROD_VAULT_SECRET_ID",
            "kv_mount_point": "secret",
            "kv_version": 2,
            "verify_ssl": true
          },
          {
            "instance_name": "dev-vault",
            "vault_url": "https://vault-dev.example.com:8200",
            "auth_method": "token",
            "vault_token": "env:DEV_VAULT_TOKEN",
            "kv_mount_point": "secret",
            "kv_version": 2,
            "verify_ssl": true
          }
        ],
        "vault_config_file": "vault_config.json",
        "secrets_config_file": "secrets_config.json",
        "encryption_enabled": true,
        "encryption_key_source": "env:ENCRYPTION_KEY",
        "cache_secrets": true,
        "cache_ttl": 300
      }
    },
    {
      "module_type": "jwt_config",
      "name": "auth-service",
      "config": {
        "secret_key": "vault:prod-vault:myapp/jwt#secret_key",
        "algorithm": "HS256",
        "expiration_minutes": 30,
        "issuer": "myapp-production"
      }
    },
    {
      "module_type": "inference_endpoint",
      "name": "llm-service",
      "config": {
        "model_name": "llama-3.1-70b-versatile",
        "endpoint_url": "config:api.groq_url",
        "max_tokens": 2000,
        "temperature": 0.7
      }
    }
  ],
  "environments": {
    "production": {
      "secrets": {
        "jwt_secret": "vault:prod-vault:myapp/prod/jwt#secret_key",
        "database_password": "vault:prod-vault:myapp/prod/database#password",
        "api_key": "vault:prod-vault:myapp/prod/api-keys#groq"
      },
      "urls": {
        "api_base_url": "https://api.example.com"
      }
    },
    "development": {
      "secrets": {
        "jwt_secret": "vault:dev-vault:myapp/dev/jwt#secret_key",
        "database_password": "config:database.dev.password",
        "api_key": "env:DEV_GROQ_API_KEY"
      },
      "urls": {
        "api_base_url": "http://localhost:8000"
      }
    }
  }
}
